<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomeProdutoCardapio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/productNameTest"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descricaoProdutoCardapio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriptionNameTest"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/precoProdutoCardapio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0"
            android:background="@drawable/shape_arrounded"
            android:backgroundTint="@color/colorSplash"
            android:padding="5dp"
            android:text="R$ 15.00"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/fotoProdutoCardapio"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/maminha" />

</LinearLayout>